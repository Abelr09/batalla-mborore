---
import Layout from "../layouts/Layout.astro";
import LiteYoutube from "../components/ui/LiteYoutube.astro";
import ArrowRight from "../icons/ArrowRight.astro";
import Button from "../components/ui/Button.astro";
---

<Layout title="La batalla de Mbororé">
  <main class="relative h-screen">
    <img
      src="/hero-image.webp"
      alt="Fondo"
      class="absolute inset-0 object-cover w-full h-full"
    />
    <div class="absolute inset-0 bg-black bg-opacity-60"></div>
    <div
      class="relative z-10 flex flex-col gap-y-8 md:gap-y-16 lg:gap-y-32 items-center justify-center h-full text-secondary px-4"
    >
      <h1
        class="text-6xl md:text-6xl lg:text-8xl xl:text-9xl font-bold text-center tracking-widest"
      >
        Batalla de Mbororé
      </h1>
      <div
        class="flex items-center justify-center w-full max-w-full md:max-w-3xl aspect-video"
      >
        <LiteYoutube title="Batalla de Mbororé" videoId="dQw4w9WgXcQ" />
      </div>
      <Button
        href="/ver-mas"
        label="Ver más"
        bgColor="primary"
        textColor="secondary"
      >
        <ArrowRight class="w-4 h-4 md:w-6 md:h-6" />
      </Button>
    </div>
  </main>
</Layout>
