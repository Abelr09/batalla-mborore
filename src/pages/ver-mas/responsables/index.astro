---
import Card from '@components/ui/Card.astro';
import { TEAM_MEMBERS } from '../../../data/teamData.js';
import Layout from '@layouts/Layout.astro';
import Footer from '@components/ui/Footer.astro';
---

<Layout title='Responsables | Batalla de Mborore'>
  <main class="flex flex-col items-center bg-secondary p-5">
    <h1 class="text-primary text-5xl md:text-7xl font-bold text-center text-wrap mb-16">Responsables del Proyecto</h1>
    <div class="grid grid-cols-[repeat(auto-fill,_minmax(200px,_1fr))] gap-5 w-full max-w-7xl">
      {TEAM_MEMBERS.map(member => (
        <Card
          name={member.name}
          role={member.role}
          imageUrl={member.imageUrl}
          instagramUrl={member.instagramUrl}
          linkedinUrl={member.linkedinUrl}
          githubUrl={member.githubUrl}
        />
      ))}
    </div>
  </main>
    <Footer />
</Layout>